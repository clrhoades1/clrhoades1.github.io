findKthSmallest(A, lo, hi, k) 
{
    mid = ceiling ((hi-lo+1)/2);
    m = findMedian(A, lo, hi);
    if(k == mid)
        return m;
    else
    {
        partition(A, low, hi, m);
        if(k < mid)
            return findKthSmallest(A, lo, mid, k);
        else
            return findKthSmallest(A,lo+mid,hi,k-(mid-lo)+1)
    }
}